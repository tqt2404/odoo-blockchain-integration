<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_production_lot_form_blockchain_inherit" model="ir.ui.view">
        <field name="name">stock.lot.form.blockchain.inherit</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//notebook" position="inside">
                <page string="Blockchain Traceability" name="blockchain_trace">
                    <group>
                        <group string="Định danh Số (Digital Identity)">
                            <field name="genesis_hash" widget="CopyClipboardChar" 
                                   string="Genesis Hash (Self)"/>
                            
                            <field name="prev_hash" widget="CopyClipboardChar" 
                                   string="Previous Hash"/>
                        </group>
                    </group>
                    
                    </page>
            </xpath>

        </field>
    </record>
</odoo>