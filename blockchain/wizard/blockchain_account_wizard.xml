<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="blockchain_account_wizard_form" model="ir.ui.view">
        <field name="name">blockchain.account.wizard.form</field>
        <field name="model">blockchain.account.wizard</field>
        <field name="arch" type="xml">
            <form string="Blockchain Account Generator">
                <group>
                    <field name="password_1" password="1" />
                    <field name="password_2" password="1" />
                </group>
                <footer>
                    <button name="action_generate" string="Generate" type="object" class="oe_highlight" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="blockchain_account_wizard_form_action" model="ir.actions.act_window">
        <field name="name">Blockchain Account Generator</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">blockchain.account.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
